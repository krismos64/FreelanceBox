{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": false, // Désactiver temporairement pour éviter les erreurs sur les locaux inutilisés
    "noUnusedParameters": false, // Désactiver temporairement pour éviter les erreurs sur les paramètres inutilisés
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist/node",
    "rootDir": "./",
    "removeComments": true
  },
  "include": [
    "server/**/*",
    "src/types/**/*.ts" // Ajoutez cette ligne si des types externes sont nécessaires
  ],
  "exclude": ["node_modules", "dist"]
}
