{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./",
    "composite": false, // Désactive si vous n'avez pas besoin de références croisées
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "server"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
